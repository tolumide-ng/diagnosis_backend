{
    "name": "backend-challenge",
    "version": "1.0.0",
    "description": "Mylaw Confrence is looking for someone to design a RESTful API for talks at a conference.",
    "main": "index.js",
    "scripts": {
        "lint": "eslint **/*.js",
        "lint:fix": "prettier-eslint **/**/*.{js,json} --write",
        "prettier": "prettier **/**/*.{js,json} --write",
        "build:server": "babel src --copy-files --out-dir build",
        "build": "npm run build:server",
        "dev": "nodemon --exec babel-node src/index",
        "start": "npm run set:db && cd build && node index.js",
        "int:test": "NODE_ENV=test nyc --require @babel/register mocha src/test/integrations/**.spec.js --timeout 20000 --exit",
        "unit:test": "jest ./src/test/units/**.spec.js",
        "test": "npm run unit:test && npm run int:test",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "coveralls": "npm run coverage -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
        "set:db": "sequelize db:migrate",
        "reset:db": "sequelize db:migrate:undo:all && sequelize db:migrate"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tolumide-ng/backend-challenge.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/tolumide-ng/backend-challenge/issues"
    },
    "homepage": "https://github.com/tolumide-ng/backend-challenge#readme",
    "dependencies": {
        "@babel/cli": "^7.7.5",
        "@babel/core": "^7.7.5",
        "@babel/node": "^7.7.4",
        "@babel/plugin-proposal-class-properties": "^7.7.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
        "@babel/polyfill": "^7.7.0",
        "@babel/preset-env": "^7.7.6",
        "@babel/register": "^7.7.4",
        "body-parser": "^1.19.0",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "cors": "^2.8.5",
        "coveralls": "^3.0.9",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "faker": "^4.1.0",
        "husky": "^3.1.0",
        "indicative": "^5.0.8",
        "indicative-formatters": "^7.2.3",
        "indicative-rules": "^7.3.0",
        "indicative-utils": "^7.0.4",
        "jest": "^24.9.0",
        "lint-staged": "^9.5.0",
        "mocha": "^6.2.2",
        "mocha-lcov-reporter": "^1.3.0",
        "morgan": "^1.9.1",
        "nyc": "^14.1.1",
        "pg": "^7.14.0",
        "pg-hstore": "^2.3.3",
        "prettier-eslint": "^9.0.1",
        "prettier-eslint-cli": "^5.0.0",
        "sequelize": "^5.21.2",
        "sequelize-cli": "^5.5.1",
        "supertest": "^4.0.2"
    },
    "devDependencies": {
        "eslint": "^6.7.2",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-plugin-import": "^2.19.1",
        "nodemon": "^2.0.1"
    }
}
